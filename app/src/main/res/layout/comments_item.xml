<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="2dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dot_dark_screen1"
        android:layout_alignTop="@id/suggestion_item_linear_layout"/>
    <LinearLayout
        android:id="@+id/suggestion_item_linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/connection_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:view_borderWidth="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            app:view_borderColor="@color/black"
            android:src="@drawable/no_user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commenting_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aman_pandey"
                android:gravity="start"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/commenting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yesterday"
                android:gravity="start"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/commenting_person_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/very_useful_information_thanks_for_sharing"
                android:textSize="12sp"
                android:gravity="start"
                android:layout_marginBottom="5dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
