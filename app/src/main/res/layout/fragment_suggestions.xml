<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.SuggestionsFragment">

    <RelativeLayout
        android:id="@+id/view_suggestions"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:id="@+id/view_request_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Requests"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"

            android:background="@drawable/add_classes_btn_selector"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/view_suggestions"
        android:id="@+id/suggestions_recycler_view"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>