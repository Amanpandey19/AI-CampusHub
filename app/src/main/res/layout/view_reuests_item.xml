<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:backgroundTint="@color/grey_theme"
    android:background="@color/grey_theme"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/connections_item_linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey_theme"
        android:backgroundTint="@color/grey_theme"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/connection_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:view_borderWidth="1dp"
            app:view_borderColor="@color/black"
            android:src="@drawable/no_user"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/connection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aman_pandey"
                android:gravity="start"
                android:layout_gravity="start"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/connection_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mca_nit_kkr"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/accept_connection"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Accept"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/add_suggestion_bg"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/remove_connection"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Reject"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/add_suggestion_bg"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
