<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey_theme"
    android:backgroundTint="@color/grey_theme"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context=".Home.ViewConnectionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Requests"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept request to message connection"
        android:layout_alignParentTop="true"
        android:textSize="12sp"
        android:layout_marginTop="55dp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/my_requests_recycler_view"
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:layout_height="wrap_content"/>

</RelativeLayout>