<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="2dp"
    android:id="@+id/chat_person_card"
    android:elevation="2dp"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chat_person_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/user_two"
                android:padding="5dp"
                app:strokeWidth="0dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="3dp"
                android:clickable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:strokeColor="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                android:focusable="true" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/chat_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anuj_rai"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:maxLength="24"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    tools:ignore="RelativeOverlap">


                    <TextView
                        android:id="@+id/last_chat_message_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_14_52"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="7dp"
                        android:textColor="@color/grey"
                        android:textSize="12sp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/chat_person_last_messsage"
                        android:textColor="@color/light_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="1dp"
                        android:text="@string/hi_akshita_how_you_doing_can_you_help_me_out_with_something"
                        android:layout_marginEnd="70dp"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>